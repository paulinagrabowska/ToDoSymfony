{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.category_list'|trans }}
{% endblock %}

{% block body %}
    <h1 class="text-center ">{{ 'label.category.list'|trans }}</h1>
    {% if pagination is defined and pagination|length %}

        <div class="navigation text-center ">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>{{ knp_pagination_sortable(pagination, 'label.id'|trans, 'c.id') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.created_at'|trans, 'c.createdAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.updated_at'|trans, 'c.updatedAt') }}</th>
                <th>{{ knp_pagination_sortable(pagination, 'label.title'|trans, 'c.title') }}</th>
                <th>{{ 'label.category'|trans }}</th>
                <th></th>
                <th>{{ 'label.actions'|trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for category in pagination %}
                <tr>
                    <td>{{ category.id }}</td>
                    <td>{{ category.createdAt|localizeddate }}</td>
                    <td>{{ category.updatedAt|localizeddate }}</td>
                    <td>{{ category.title }}</td>
                    {#<td>{{ task.category.title }}</td>#}
                    <td>
                        <a href="{{ url('category_view', {id: category.id}) }}" title="{{ 'label.view'|trans }}" class="btn btn-secondary">
                            {{ 'label.view'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_new', {id: category.id}) }}" title="{{ 'label.view'|trans }}" class="btn btn-primary">
                            {{ 'label.new'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_edit', {id: category.id}) }}" title="{{ 'label.view'|trans }}" class="btn btn-info">
                            {{ 'label.edit'|trans }}
                        </a>
                    </td>
                    <td>
                        <a href="{{ url('category_delete', {id: category.id}) }}" title="{{ 'label.view'|trans }}" class="btn btn-danger">
                            {{ 'label.delete'|trans }}
                        </a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation text-center">
            {{ knp_pagination_render(pagination) }}
        </div>

    {% else %}
        <p>
            {{ 'message.empty_list'|trans }}
        </p>
    {% endif %}

{% endblock %}